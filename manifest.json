{
  "name": "Ai Summarizer",
  "description": "Summarize any webpage using Chrome's built-in AI",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting", "storage", "sidePanel"],
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "ghost.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*/*"],
      "js": ["contentScript.js"]
    }
  ]
}
