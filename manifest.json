{
  "name": "Smart helper Buddy",
  "description": "Summarize and undertands any paper using Chrome's built-in AI",
  "version": "1.0",
  "manifest_version": 3,
  "host_permissions": ["https://*/*", "<all_urls>"],
  "permissions": ["activeTab", "scripting", "storage", "sidePanel","tabs"],
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*/*"],
      "js": ["contentScript.js"]
    }
  ]
}
