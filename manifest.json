{
  "name": "Ai Summarizer",
  "description": "Summarize any webpage using Chrome's built-in AI",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "ghost.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*/*"],
      "js": ["contentScript.js"]
    }
  ]
}