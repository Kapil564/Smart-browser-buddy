{
  "name": "Ai Summarizer",
  "description": "Summarize any webpage using Chrome's built-in AI",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://*/*","https://*/*"],
  "action": { "default_popup": "popup.html","default_icon":"ghost.png" },
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
